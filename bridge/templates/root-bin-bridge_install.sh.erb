#!/bin/bash

set -o xtrace

IF1="<%= @main_net_if %>"
IF2="<%= @bridge_net_if %>"

echo nmcli con add ifname br0 type bridge con-name br0
echo nmcli con add type bridge-slave ifname "$IF1" master br0
echo nmcli con add type bridge-slave ifname "$IF2" master br0
echo nmcli con up br0

echo touch /root/flags/bridge-installed
